# Required candidate fields (app fails fast if missing)
CANDIDATE_NAME=Jane Candidate
CANDIDATE_EMAIL=jane.candidate@example.com
CANDIDATE_PHONE=+15555550123

# Optional candidate profile
LINKEDIN_URL=https://www.linkedin.com/in/jane-candidate
PORTFOLIO_URL=https://example.dev
CURRENT_LOCATION=New York, NY
WILLING_TO_RELOCATE=false
REQUIRES_SPONSORSHIP=false
VISA_STATUS=No
YEARS_EXPERIENCE=3
PRIMARY_SKILLS=Java,Spring Boot,Microservices,REST APIs
SECONDARY_SKILLS=Docker,Kubernetes,PostgreSQL
RESUME_PATH=./data/resume.pdf

# LLM and runtime
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gpt-oss:120b-cloud
OLLAMA_TEMPERATURE=0.7
OLLAMA_TOP_P=0.9

# Browser/agent behavior
BROWSER_HEADLESS=true
BROWSER_SLOW_MO=500
BROWSER_TIMEOUT=30000
MAX_RETRIES=3
MAX_STEPS=50
ENABLE_AUTO_SUBMIT=false
VERIFICATION_MODE=true

# Search config
SEARCH_TERMS=Java Backend Developer
MAX_JOBS_TO_APPLY=5
JOB_BOARDS=

# Storage/logging
DB_PATH=./data/applications.db
MAX_HISTORY_DAYS=90
LOG_LEVEL=info
